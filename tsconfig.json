{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "es2022",
      "dom"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src", // Base URL for module resolution
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@workers/*": [
        "workers/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/games/*": [
        "games/*"
      ],
      "@/*": [
        "*"
      ],
      "*": [
        "./*",
        "../node_modules/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
