{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Document Validation Schema",
  "description": "Schema for validating ingested project documents",
  "type": "object",
  "properties": {
    "documentType": {
      "type": "string",
      "enum": ["PRD", "Architecture", "API", "UserStory", "TestPlan"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "owner": {
      "type": "string",
      "minLength": 3
    },
    "content": {
      "type": "object",
      "properties": {
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "body": {"type": "string"}
            },
            "required": ["title", "body"]
          }
        }
      },
      "required": ["sections"]
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "compliance": {
      "type": "object",
      "properties": {
        "corePrinciples": {"type": "boolean"},
        "securityStandards": {"type": "boolean"}
      },
      "required": ["corePrinciples"]
    }
  },
  "required": ["documentType", "version", "owner", "content"]
}